{
  "version": "1.0.0-*",

  "buildOptions": {
    "copyToOutput": {
      "include": [
        "Settings.json",
        "../../src/OpenClassic.Server/GameData/*",
        "../../src/OpenClassic.Server/GameData/Definitions/*",
        "../../src/OpenClassic.Server/GameData/Locations/*",
        "../../src/OpenClassic.Server/GameData/Landscape/*"
      ]
    }
  },

  "publishOptions": {
    "include": [
      "Settings.json",
      "../../src/OpenClassic.Server/GameData/*",
      "../../src/OpenClassic.Server/GameData/Definitions/*",
      "../../src/OpenClassic.Server/GameData/Locations/*",
      "../../src/OpenClassic.Server/GameData/Landscape/*"
    ]
  },

  "dependencies": {
    "dotnet-test-xunit": "2.2.0-*",
    "xunit": "2.2.0-*",
    "Microsoft.NETCore.App": {
      "type": "platform",
      "version": "1.1.0"
    },
    "OpenClassic.Server": "1.0.0-*"
  },

  "frameworks": {
    "netcoreapp1.1": {
      "imports": "dnxcore50"
    }
  },

  "testRunner": "xunit"
}
